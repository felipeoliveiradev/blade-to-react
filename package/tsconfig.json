{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
